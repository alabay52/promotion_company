<Window x:Class="promotion_company.Views.Windows.MyActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:promotion_company.Views.Windows"
        mc:Ignorable="d"
      Title="Мои акции" Height="650" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="500" />
        </Grid.RowDefinitions>
        <ListView Name="gridActions" Grid.Row="0" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="акции" DisplayMemberBinding="{Binding ActionName}"/>
                    <GridViewColumn Header="тип акций" DisplayMemberBinding="{Binding ActionTypes.TypeName}"/>
                    <GridViewColumn Header="локация" DisplayMemberBinding="{Binding Location}"/>
                    <GridViewColumn Header="начало" DisplayMemberBinding="{Binding StartDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="конец" DisplayMemberBinding="{Binding EndDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="нужные промоутеры" DisplayMemberBinding="{Binding PromoterActions.Users.UserId.FullName}"/>
                </GridView>
            </ListView.View>            
            
        </ListView>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="20" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="20" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="20" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="14" Grid.Column="0" Text="Выберите дату"/>

            <DatePicker  Name="DatePicker" Grid.Row="14" Grid.Column="2" Width="200" />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Введите название акции"/>
            <TextBlock Grid.Row="10" Grid.Column="0" Text="Введите  локацию"/>
            <TextBox Name="" Grid.Row="12" Grid.Column="2" Height="45" Width="200"/>


            <ComboBox Name="SpecialCmb" Grid.Row="4" Grid.Column="0" Height="45" Width="200"/>
            <TextBox Name="DirectionCmb" Grid.Row="4" Grid.Column="2" Height="45" Width="200"/>
            <ComboBox Name="GroupCmb" Grid.Row="8" Grid.Column="0" Height="45" Width="200"/>
            

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Выберите тип акции"/>
           
            

            <Button Name="AddBtn" Grid.Column="2" Grid.Row="18" Width="250" Content="Добавить" />

        </Grid>
    </Grid>
        <!--<Button Margin="0 0 5 0" Grid.Row="1" Content="Назад" Name="BackBtn" Click="BackBtn_Click" Height="35" Width="100" HorizontalAlignment="Right"/>-->

   
</Window>
